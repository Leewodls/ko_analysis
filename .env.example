# FastAPI 한국어 음성 분석 서버 환경변수 설정 예시

# OpenAI API 설정
OPENAI_API_KEY=your_openai_api_key_here

# AWS S3 설정
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=ap-northeast-2

# MongoDB 설정
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DB_NAME=audio_analysis

# MariaDB 설정
MARIADB_HOST=localhost
MARIADB_PORT=3306
MARIADB_DATABASE=communication_db
MARIADB_USER=root
MARIADB_PASSWORD=your_mariadb_password_here

# 서버 설정
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_DEBUG=false

# 파일 업로드 설정
MAX_FILE_SIZE_MB=100
TEMP_FILE_DIR=/tmp/audio_analysis

# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/app.log

# Whisper 모델 설정 (tiny, base, small, medium, large)
WHISPER_MODEL_SIZE=base

# GPT 모델 설정
GPT_MODEL=gpt-4o-mini
GPT_MAX_TOKENS=2000
GPT_TEMPERATURE=0.3 